{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "incremental": false,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "inlineSourceMap": true
  },
  "include": ["src/**/*", "tests/**/*", "*.config.mjs"],
  "exclude": ["node_modules", "dist", "_archived/**/*"]
}
